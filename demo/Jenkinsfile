pipeline {
    agent any
    stages {
        stage('Initialize') {
            steps {
                echo 'setting...'   
                 bat 'set'
            }
        }
       stage('build') {
          steps {
             bat 'echo building....'
             bat 'gradle build'
               bat 'echo builded....'    
            
          }
       }
        stage('try') {
          steps {
             bat 'echo changing path....'
             bat 'cd E:\\git\\repo\\demo'
             bat 'gradle build'
               bat 'echo builded....'    
            
          }
       }
    }
    post { 
        always { 
             echo 'I will always say Hello again!'
        }
    }
}
