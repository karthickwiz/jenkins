pipeline {
    agent any
    stages {
        stage('Initialize') {
            steps {
                echo 'setting...'   
                 bat 'set'
            }
        }
       stage('build') {
          steps {
             bat 'echo building....'
             bat 'gradle build'
               bat 'echo builded....'    
            
          }
       }
        stage('try') {
          steps {
             bat 'echo changing path....'
           //  bat 'cd E:\\git\\repo\\demo'
          //   bat 'gradle build'
               bat 'echo builded....'    
            
          }
       }
stage('Sonarqube analysis') {
    steps {
    script {
           def scannerHome = tool 'sonar-scanner-3.2.0.1227-windows';
    }
       
     withSonarQubeEnv('clsd') {
         echo scannerHome
         bat "${scannerHome}/bin/sonar-scanner.bat" 
    }

    }
        }
    }
    post { 
        always { 
             echo 'DONE!'
        }
    }
}
